<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
      body{
        background: #e6e9ed;
      }
      .holder{
        margin-top:200px;
        display:flex;
        justify-content:space-between;
      }
      .t1, .t2{
        width:45%;
        box-sizing: border-box;
      }
      #details{
        margin-top: 20px;
      }
    </style>
    <script
    src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  </head>
  <body>
    <nav class="navbar fixed-top navbar-expand-sm bg-dark navbar-deafult">
      <div class="container">
        <a class="navbar-brand" href="/">Foodyz</a><ul class="navbar-nav">
          <!-- <li style="margin-right: 10px;" class="nav-item">
            <a style="color:rgb(246, 135, 19);" class="nav-link" href="#">Login</a>
          </li> -->
        <form class="form-inline" action="/profile/<%= customer._id %>" action="get">
          <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search Restaurant">
          <button class="btn btn-warning" type="submit">Search</button>
        </form>
        <p style="color:rgb(246, 135, 19);margin-left: 30px; margin-top:12px; margin-right: 10px;">Logged in as <%= customer.name %></p>
        <a style="text-decoration: none;cursor: pointer; color:rgb(246, 135, 19);margin-left: 30px; margin-top:12px; margin-right: 10px;" href="/profile/customerlogout">Logout</a>

        <a style="color:rgb(246, 135, 19);margin-left: 30px; margin-top:5px; margin-right: 10px;" class="nav-link" href="/profile/<%= customer._id %>/cart">Cart</a>

      </div>
    </nav>

<div class="holder container">
    <div style="" class="t1" content">
      <% restaurant.forEach(function(restaurant){ %>
      <div class="restaurant shadow p-3 mb-5 bg-white rounded">
            <div style="text-align: center;" id="details">
                <h2><%= restaurant.name %></h2>
                <p><%= restaurant.address %></p>
                <a class="btn btn-warning" id="menu" href="/profile/<%= customer._id %>/menulist/<%= restaurant._id %>">Show Menu list</a>
            </div>
        <% }); %><br>
      </div>
    </div>

    <div class="t2">
      <h3>Order Status</h3>
      <div class="shadow p-3 mb-5 bg-white rounded">
        <% if(customer.orderaccepted == 1){ %>
          <p>Your order has been accepted by the restaurant</p>
        <% } else if(customer.foodsent != '') { %>
          <p>Your order is on the way</p>
          <a href="/profile/<%= customer._id %>/orderReceived">Order Received</a>
        <% } %>
      </div>
    </div>
</div>
  </body>
</html>
